@model IEnumerable<EmbroideryWorkerManagement.Models.MonthlyPayment>
@{
    ViewData["Title"] = "Salary Summary";
}

<a href="@Url.Action("ExportPdf", "SalaryReport")" class="btn btn-danger mb-3">
    <i class="bi bi-file-earmark-pdf"></i> Export PDF
</a>

<h2 class="mb-4">Salary Summary</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Worker</th>
            <th>Month</th>
            <th>Year</th>
            <th>Base Salary</th>
            <th>Attendance Bonus</th>
            <th>Extra Bonus</th>
            <th>Advance Deduction</th>
            <th>Total Salary</th>
            <th>Paid</th>
            <th>Due</th>
            <th>Payment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Worker.Name</td>
                <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(item.Month)</td>
                <td>@item.Year</td>
                <td>@item.BaseSalary.ToString("N2")</td>
                <td>@item.AttendanceBonus.ToString("N2")</td>
                <td>@item.ExtraProductionBonus.ToString("N2")</td>
                <td>@item.AdvanceDeduction.ToString("N2")</td>
                <td>@item.TotalSalary.ToString("N2")</td>
                <td>@item.PaidAmount.ToString("N2")</td>
                <td>@item.DueAmount.ToString("N2")</td>
                <td>@item.PaymentDate.ToString("dd MMM yyyy")</td>
            </tr>
        }
    </tbody>
</table>
