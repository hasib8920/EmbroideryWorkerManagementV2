<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Embroidery ERP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
            color: white;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

        .active-link {
            background-color: #007bff;
            border-radius: 5px;
        }

        .content {
            padding: 20px;
        }

        .navbar-brand {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Embroidery ERP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Main Layout -->
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-2 sidebar p-3">
                <h5 class="mb-4">Menu</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                            <i class="fa fa-home"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Worker" asp-action="Index">
                            <i class="fa fa-users"></i> Workers
                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Attendance" asp-action="Index">
                            <i class="fa fa-calendar-check"></i> Attendance
                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="AdvanceSalary" asp-action="Index">
                            <i class="fa fa-money-bill"></i> Advance Salary
                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="MachineWork" asp-action="Index">
                            <i class="fa fa-cogs"></i> Machine Work
                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="MonthlyTarget" asp-action="Index">
                            <i class="fa fa-bullseye"></i> Monthly Targets
                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="MonthlyPayment" asp-action="Index">
                            <i class="fa fa-coins"></i> Monthly Payments
                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a class="nav-link" asp-controller="Payment" asp-action="Index">
                            <i class="fa fa-credit-card"></i> Payments
                        </a>
                    </li>

                    <!-- Future add here -->
                </ul>
            </div>

            <!-- Content -->
            <div class="col-md-10 content">
                @RenderBody()
            </div>

        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
