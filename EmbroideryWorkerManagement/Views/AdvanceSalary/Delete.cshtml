@model EmbroideryWorkerManagement.Models.AdvanceSalary

@{
    ViewData["Title"] = "Delete Advance Salary";
}

<div class="container mt-4">
    <h2>Delete Advance Salary</h2>

    <div class="alert alert-danger mb-4">
        Are you sure you want to delete this advance salary record?
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Worker Name</dt>
                <dd class="col-sm-9">@Model.Worker?.Name</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount.ToString("N2")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
