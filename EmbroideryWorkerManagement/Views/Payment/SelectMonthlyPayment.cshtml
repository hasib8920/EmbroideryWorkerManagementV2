@model IEnumerable<EmbroideryWorkerManagement.Models.MonthlyPayment>

@{
    ViewData["Title"] = "Select Monthly Payment";
}

<h2>Select Monthly Payment</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Worker</th>
            <th>Month</th>
            <th>Total Salary</th>
            <th>Paid</th>
            <th>Due</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mp in Model)
        {
            <tr>
                <td>@mp.Worker.Name</td>
                <td>@mp.Month / @mp.Year</td>
                <td>@mp.TotalSalary.ToString("N2")</td>
                <td>@mp.PaidAmount.ToString("N2")</td>
                <td>@mp.DueAmount.ToString("N2")</td>
                <td>
                    <a asp-action="Create" asp-route-monthlyPaymentId="@mp.Id" class="btn btn-success btn-sm">
                        Make Payment
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
