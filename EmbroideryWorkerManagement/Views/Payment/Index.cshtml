@model IEnumerable<EmbroideryWorkerManagement.Models.Payment>

@{
    ViewData["Title"] = "Payments";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Payments History</h2>
    <a asp-action="SelectMonthlyPayment" class="btn btn-primary">Add New Payment</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Worker</th>
            <th>Month</th>
            <th>Paid Amount</th>
            <th>Payment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.MonthlyPayment.Worker.Name</td>
                <td>@payment.MonthlyPayment.Month / @payment.MonthlyPayment.Year</td>
                <td>@payment.PaidAmount.ToString("N2")</td>
                <td>@payment.PaymentDate.ToString("dd MMM yyyy")</td>
            </tr>
        }
    </tbody>
</table>
