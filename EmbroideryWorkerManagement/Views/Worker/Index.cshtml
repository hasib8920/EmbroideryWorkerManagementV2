@model IEnumerable<EmbroideryWorkerManagement.Models.Worker>

@{
    ViewData["Title"] = "All Workers";
}

<div class="container mt-4">
    <h2 class="mb-4">All Workers</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Add New Worker</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Join Date</th>
                <th>Base Salary</th>
                <th>Overtime Rate</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var worker in Model)
            {
                <tr>
                    <td>@worker.Name</td>
                    <td>@worker.PhoneNumber</td>
                    <td>@worker.JoinDate.ToString("yyyy-MM-dd")</td>
                    <td>@worker.BaseSalary.ToString("N2")</td>
                    <td>@worker.OvertimeRate.ToString("N2")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@worker.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@worker.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@worker.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
