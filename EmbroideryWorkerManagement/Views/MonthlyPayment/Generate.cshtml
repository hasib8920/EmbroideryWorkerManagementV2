@{
    ViewData["Title"] = "Generate Monthly Payment";
}

<h2 class="mb-4">Generate Monthly Payment</h2>

<form asp-action="Generate" method="post" class="border p-4 rounded bg-light">
    <div class="form-group">
        <label>Worker</label>
        <select name="workerId" class="form-control" required>
            <option value="">Select Worker</option>
            @foreach (var worker in ViewBag.Workers)
            {
                <option value="@worker.Id">@worker.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Month</label>
        <select name="month" class="form-control" required>
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Year</label>
        <input type="number" name="year" class="form-control" value="@DateTime.Now.Year" required />
    </div>

    <button type="submit" class="btn btn-primary">Generate</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
