@{
    ViewData["Title"] = "Calculate Salary";
}

<h2>Salary Calculation</h2>

<form asp-action="Calculate" method="post" class="p-4 border rounded">
    <div class="form-group mb-3">
        <label>Worker</label>
        <select class="form-control" name="workerId" required>
            <option value="">Select Worker</option>
            @foreach (var worker in ViewBag.Workers)
            {
                <option value="@worker.Id">@worker.Name</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Year</label>
        <input type="number" name="year" value="@DateTime.Now.Year" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Month</label>
        <input type="number" name="month" min="1" max="12" value="@DateTime.Now.Month" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Calculate Salary</button>
</form>
