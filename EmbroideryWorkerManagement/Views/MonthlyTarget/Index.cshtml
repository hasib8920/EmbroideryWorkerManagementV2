@model IEnumerable<EmbroideryWorkerManagement.ViewModels.MonthlyTargetViewModel>
@{
    ViewData["Title"] = "Monthly Targets";
}

<h2 class="mb-4">Monthly Targets</h2>

<a asp-action="Create" class="btn btn-success mb-3">Create New Target</a>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Worker</th>
            <th>Month</th>
            <th>Year</th>
            <th>Daily Target</th>
            <th>Total Units</th>
            <th>Bonus/Unit</th>
            <th>Daily Bonus</th>
            <th>Full Attendance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* <td>@item.WorkerName</td> *@
                <td>@item.Month</td>
                <td>@item.Year</td>
                <td>@item.DailyTargetUnits</td>
                <td>@item.TargetUnits</td>
                <td>@item.BonusPerExtraUnit</td>
                <td>@item.DailyTargetBonusAmount</td>
                <td>@item.FullAttendanceBonus</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
